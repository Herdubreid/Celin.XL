@inherits BlazorStateComponent

<MudExpansionPanel>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center">
            <MudIconButton Icon="@_runIcon" @onclick="Run" />
            <MudText Typo="Typo.h6">@Script.Value.Title</MudText>
        </MudStack>
    </TitleContent>
    <ChildContent>
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Start">
            <MudText>@Script.Value.Description</MudText>
            <MudIconButton Icon="@Icons.Material.Filled.Code" @onclick="EditCode" />
        </MudStack>
    </ChildContent>
</MudExpansionPanel>
