@inherits BlazorStateComponent

<MudPaper Style=" margin: 0 12px;">
    <MudTextField
        @bind-Value="State.Command"
        Immediate="true"
        TextUpdateSuppression="false"
        Clearable="true"
        ErrorText="@State.CommandError"
        Error="HasError"
        id="commandPromptId"
        Style="font-family: Consolas;"
        T="string"
        FullWidth
        Variant="Variant.Text"
        Placeholder="Enter Command + Shift-Enter..."
        Lines="1"
        AutoGrow="true"
        AutoFocus="true"
        spellcheck="false"/>
</MudPaper>
