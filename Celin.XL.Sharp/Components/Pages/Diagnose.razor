@page "/diagnose"
@inherits BlazorStateComponent

<PageTitle>Output</PageTitle>

<MudTabs Elevation="4"
         MinimumTabWidth="100"
         AlwaysShowScrollButtons="true">
    <MudTabPanel Text="History">
        <MudContainer Style="height: calc(100vh - 318px); overflow: auto;">
            <MudText>
                @foreach (var h in State.History)
                {                    
                    <pre>@h</pre>
                }
            </MudText>
        </MudContainer>
    </MudTabPanel>
    <MudTabPanel Text="Output">
        <MudContainer Style="height: calc(100vh - 318px); overflow: auto;">
            <MudText>
                <pre>@State.Output.ToString()</pre>
            </MudText>
        </MudContainer>
    </MudTabPanel>
    <MudTabPanel Text="Errors">
        <MudContainer Style="height: calc(100vh - 318px); overflow: auto;">
            <MudText Color="Color.Error">
                <pre>@State.CommandError</pre>
            </MudText>
        </MudContainer>
    </MudTabPanel>
</MudTabs>