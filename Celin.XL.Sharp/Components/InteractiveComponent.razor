<MudPaper Style=" margin: 0 12px;">
    <MudTextField
        @ref="_input"
        @bind-Value="_command"
        Immediate="true"
        TextUpdateSuppression="false"
        Clearable="true"
        ErrorText="@_error"
        Error="_hasError"
        id="commandPromptId"
        Style="font-family: Consolas;"
        T="string"
        FullWidth
        Variant="Variant.Text"
        Placeholder="Shift-Enter to run..."
        Lines="1"
        AutoGrow="true"
        AutoFocus="true"
        spellcheck="false"
        @onkeydown="_handleKeyDown"/>
</MudPaper>
